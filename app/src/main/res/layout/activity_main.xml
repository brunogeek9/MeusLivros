<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_cad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="95dp"
        android:layout_marginTop="95dp"
        android:text="Cadastrar Novo"
        app:layout_constraintBottom_toTopOf="@+id/btn_listar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_listar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="284dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:text="listar livros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_cad"
        app:layout_constraintStart_toStartOf="@+id/btn_cad"
        app:layout_constraintTop_toBottomOf="@+id/btn_cad" />
</android.support.constraint.ConstraintLayout>